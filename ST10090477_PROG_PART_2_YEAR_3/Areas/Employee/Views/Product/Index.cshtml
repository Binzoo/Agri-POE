@model IEnumerable<ST10090477_PROG_PART_2_YEAR_3.ViewModels.CreateProductVM>

@{
    ViewData["Title"] = "View Products";
}

<div class="container-fluid mx-auto">
    <h1 class="display-4">All Products</h1>
    <form method="get" asp-action="Index" class="row g-3 mb-3">
        <div class="col-md-3">
            <label for="startDate" class="form-label">Production Start Date</label>
            <input type="date" id="startDate" name="startDate" class="form-control" value="@ViewData["startDate"]" />
        </div>
        <div class="col-md-3">
            <label for="endDate" class="form-label">Production End Date</label>
            <input type="date" id="endDate" name="endDate" class="form-control" value="@ViewData["endDate"]" />
        </div>
        <div class="col-md-3 align-self-end">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </form>
    <a class="btn btn-success mb-3" asp-action="Create" asp-controller="Product">Add Product</a>
    <div class="table-responsive d-none d-lg-block">
        <table class="table align-middle mb-0 bg-white" id="myTable">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Product Image</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Production Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="ms-3">
                                    <img class="img-fluid" src="~/Thumbnail/@data.ProductImageUrl" alt="@data.ProductName"
                                        style="max-width: 100px; height: auto;">
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@data.ProductName</p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@data.ProductCategory</p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@data.ProductProductionDate</p>
                        </td>
                        <td>
                            <a type="button" class="btn btn-link btn-sm btn-rounded" asp-action="Edit"
                                asp-controller="Product" asp-route-id="@data.ProductId">Edit</a>
                            <a type="button" class="btn btn-link btn-sm btn-rounded" asp-action="Delete"
                                asp-controller="Product" asp-route-id="@data.ProductId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-lg-none">
        @foreach (var data in Model)
        {
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-4">
                        <img src="~/Thumbnail/@data.ProductImageUrl" class="img-fluid rounded-start"
                            alt="@data.ProductName">
                    </div>
                    <div class="col-8">
                        <div class="card-body">
                            <h5 class="card-title">@data.ProductName</h5>
                            <p class="card-text"><strong>Category:</strong> @data.ProductCategory</p>
                            <p class="card-text"><strong>Production Date:</strong>
                                @data.ProductProductionDate</p>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Product"
                                asp-route-id="@data.ProductId">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Product"
                                asp-route-id="@data.ProductId">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
