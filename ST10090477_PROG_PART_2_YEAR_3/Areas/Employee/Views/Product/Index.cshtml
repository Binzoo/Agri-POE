@model IEnumerable<ST10090477_PROG_PART_2_YEAR_3.ViewModels.CreateProductVM>
@{
    ViewData["Title"] = "View Products";
}

<div class="container-fluid mx-auto">
    <h1>All Product</h1>
    <a class="btn btn-success mb-1" asp-action="Create" asp-controller="Product">Add Product</a>
    <table class="table align-middle mb-0 bg-white" id="myTable">
        <thead class="bg-primary text-white">
            <tr>
                <th>Product Image</th>
                <th>Product Name</th>
                <th>Category</th>
                <th>Production Date</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="ms-3">
                                <img class="img-fluid" src="~/Thumbnail/@data.ProductImageUrl" alt="@data.ProductName" style="max-width: 100px; height: auto;">
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@data.ProductName</p>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@data.ProductCategory</p>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@data.ProductProductionDate</p>
                    </td>
                    <td>
                        <a type="button" class="btn btn-link btn-sm btn-rounded" asp-action="ResetPassword" asp-controller="User" >
                            Edit Password
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>



</div>