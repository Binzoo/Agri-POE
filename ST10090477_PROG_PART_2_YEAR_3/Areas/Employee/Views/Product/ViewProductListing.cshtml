@model IEnumerable<ST10090477_PROG_PART_2_YEAR_3.ViewModels.CreateProductVM>
@{
    ViewData["Title"] = "Products of Specific User";
}

<div class="container-fluid mx-auto">
    <h1>All Products</h1>
    <a class="btn btn-success mb-3" asp-action="Index" asp-controller="Product">Go Back</a>
    <div class="table-responsive d-none d-lg-block">
        <table class="table align-middle mb-0 bg-white" id="myTable">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Product Image</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Production Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="ms-3">
                                    <img class="img-fluid" src="~/Thumbnail/@data.ProductImageUrl" alt="@data.ProductName"
                                        style="max-width: 100px; height: auto;">
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@data.ProductName</p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@data.ProductCategory</p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@data.ProductProductionDate</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-lg-none">
        @foreach (var data in Model)
        {
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-4">
                        <img src="~/Thumbnail/@data.ProductImageUrl" class="img-fluid rounded-start"
                            alt="@data.ProductName">
                    </div>
                    <div class="col-8">
                        <div class="card-body">
                            <h5 class="card-title">@data.ProductName</h5>
                            <p class="card-text"><strong>Category:</strong> @data.ProductCategory</p>
                            <p class="card-text"><strong>Production Date:</strong>
                                @data.ProductProductionDate</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
