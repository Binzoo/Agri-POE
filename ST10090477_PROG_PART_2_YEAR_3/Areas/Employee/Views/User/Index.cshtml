@using ST10090477_PROG_PART_2_YEAR_3.Utlities
@model List<ST10090477_PROG_PART_2_YEAR_3.ViewModels.UserVM>
@{
}
<div class="container-fluid mx-auto">
    <h1>All Users</h1>
    <div class="d-flex justify-content-between mb-3">
        <a class="btn btn-success" asp-action="CreateFarmer" asp-controller="User">Add Farmer</a>
        <a class="btn btn-primary" asp-action="CreateEmployee" asp-controller="User">Add Employee</a>
    </div>
    <div class="table-responsive d-none d-md-block">
        <table class="table align-middle mb-0 bg-white" id="myTable">
            <thead class="bg-primary text-white">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="ms-3">
                                    <p class="fw-bold mb-1">@data.FirstName</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@data.LastName</p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1">@data.Email</p>
                        </td>
                        <td>
                            <p
                                class="fw-normal mb-1 btn @((data.Role == WebsiteRoles.WebsiteEmployee) ? "btn-info" : "btn-success")">
                                @data.Role</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-md-none">
        @foreach (var data in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@data.FirstName @data.LastName</h5>
                    <p class="card-text"><strong>Email:</strong> @data.Email</p>
                    <p class="card-text"><strong>Role:</strong>
                        <span class="badge @((data.Role == WebsiteRoles.WebsiteEmployee) ? "bg-info" : "bg-success")">
                            @data.Role
                        </span>
                    </p>
                </div>
            </div>
        }
    </div>
</div>
