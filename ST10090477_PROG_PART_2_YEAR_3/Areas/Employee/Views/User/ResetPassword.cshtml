@model ST10090477_PROG_PART_2_YEAR_3.ViewModels.ResetPasswrodVM
@{
    ViewData["Title"] = "Register";
}
<div class="container-fluid mx-auto">
    <a asp-action="Index" asp-controller="User" class="btn btn-success mb-1">
        <span class="d-flex align-items-center">
            <i class="bi bi-arrow-bar-left"></i>
            <span class="small">Go Back</span>
        </span>
    </a>


    <div>
        <h1>Reset Password</h1>
    </div>
    <input asp-for="Id" class="form-control" disabled hidden />
    <form asp-action="ResetPassword" asp-controller="User" asp-area="Employee" method="post">
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label"></label>
            <input type="password" asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label"></label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Reset Password</button>
    </form>
</div>